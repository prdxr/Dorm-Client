<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/login_rounded"
    android:backgroundTint="#E3E1D9"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/item_repair_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Название заявки на ремонт"
        android:textSize="18sp"
        tools:textAlignment="center" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Описание ремонта:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_repair_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Текст описания ремонта" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="Статус:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_repair_status"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"
            android:text="Статус ремонта" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/item_repair_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="Редактировать"
            android:background="@drawable/login_rounded"
            android:backgroundTint="#F2EFE5" />

        <Button
            android:id="@+id/item_repair_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Удалить"
            android:background="@drawable/login_rounded"
            android:backgroundTint="#F2EFE5" />
    </LinearLayout>
</LinearLayout>